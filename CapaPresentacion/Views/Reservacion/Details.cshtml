@model CapaEntidades.Reservacion

@{
    ViewBag.Title = "Detalles de Reservacion";
}

<h2>Detalles de Reservacion</h2>

<div>
    <dl class="dl-horizontal">
        <div class="card p-3">
            <dt>
                @Html.DisplayNameFor(model => model.NumeroReservacion)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NumeroReservacion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FechaReservacion)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FechaReservacion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cantidad)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cantidad)
            </dd>
        </div>

        <dd class="mt-4">
            <h3>Informacion de Cliente</h3>
        </dd>
        <div class="card p-3">
            <dt>
                @Html.DisplayNameFor(model => model.IdCliente)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cliente.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cliente.Apellidos)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cliente.Apellidos)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cliente.CorreoElectronico)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cliente.CorreoElectronico)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cliente.Telefono)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cliente.Telefono)
            </dd>
        </div>

        <dd class="mt-4">
            <h3>Informacion de Menu</h3>
        </dd>
        <div class="card p-3">
            <dt>
                @Html.DisplayNameFor(model => model.Menu.Descripcion)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Menu.Descripcion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Menu.Precio)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Menu.Precio)
            </dd>
        </div>

        <dd class="mt-4">
            <h3>Informacion de Mesa</h3>
        </dd>
        <div class="card p-3">
            <dt>
                @Html.DisplayNameFor(model => model.NumeroMesa)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NumeroMesa)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Mesa.Descripcion)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Mesa.Descripcion)
            </dd>
         </div>
    </dl>
</div>

<p class="text-lg-center mb-4">
    @Html.ActionLink("Editar", "Edit", new { NumeroReservacion = Model.NumeroReservacion }, new { @class = "btn btn-outline-info btn-lg w-25" })
</p>